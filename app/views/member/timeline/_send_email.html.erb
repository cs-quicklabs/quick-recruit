<li class="mb-4 ms-6">
  <span class="absolute flex items-center justify-center w-7 h-7 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900">
    <%= display_xsmall_avatar(event.user) %>
  </span>
  <div class="items-center justify-between p-1  sm:flex dark:bg-gray-700 dark:border-gray-600">
    <time class="mb-1 text-xs font-normal text-gray-400 sm:order-last sm:mb-0"><%= display_created_at_with_time(event) %></time>
    <div class="text-sm font-normal text-gray-500 dark:text-gray-300"><a href="<%= member_timeline_path(event.user) %>" class="font-medium text-gray-900 hover:underline"><%= event.user.name %></a> sent an 
      <% if event.trackable.nil? %>
        email
      <% else %>
        <span class="bg-yellow-100 text-yellow-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-yellow-300 border border-yellow-300">
          <%= event.trackable.kind.humanize.titleize %></span>
      <% end %>
      to <a href="<%= candidate_notes_path(event.eventable) %>" class="font-medium text-gray-900 hover:underline"> to <%= event.eventable.name %></a>
    </div>
  </div>
</li>
