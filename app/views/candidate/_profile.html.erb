<div class="border-b bg-gray-50 border-gray-200 py-4 lg:pl-8 w-full lg:shrink-0 lg:border-b-0 border-r xl:pl-6">
  <!-- Left column area -->
  <!-- drawer component -->
  <div id="readUserDrawerAdvanced" class="pr-4  bg-gray-50  dark:bg-gray-800">
    <div class="flex items-center mb-4 sm:mb-5">
      <div>
        <h4 id="drawer-label" class="flex items-center mb-1 text-lg font-semibold leading-none text-gray-900  dark:text-white"><%= candidate.name %>
          <a href="<%= edit_candidate_path(candidate) %>" data-tooltip-target="tooltip-edit" class="p-1 ml-1 text-gray-500 rounded-xs hover:text-gray-900 dark:text-gray-400 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke="currentColor" stroke-linecap="square" stroke-linejoin="round" stroke-width="2" d="M7 19H5a1 1 0 0 1-1-1v-1a3 3 0 0 1 3-3h1m4-6a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm7.4 1.6a2 2 0 0 1 0 2.7l-6 6-3.4.7.7-3.4 6-6a2 2 0 0 1 2.7 0Z"/></svg>
            <span class="sr-only">Edit Profile</span>
          </a>
          <div id="tooltip-edit" role="tooltip" class="inline-block text-xs absolute invisible z-10 py-1 px-2 text-xs font-medium text-white bg-gray-900 rounded-xs shadow-xs opacity-0 transition-opacity duration-300 tooltip dark:bg-gray-700">
            Edit profile
            <div class="tooltip-arrow" data-popper-arrow></div>
          </div>
        </h4>
        <div class="flex items-center text-sm font-light text-gray-900 dark:text-gray-400">
          <svg class="w-4 h-4 mr-2  text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
            <path d="M2 5.6V18c0 1.1.9 2 2 2h16a2 2 0 0 0 2-2V5.6l-.9.7-7.9 6a2 2 0 0 1-2.4 0l-8-6-.8-.7Z"/>
            <path d="M20.7 4.1A2 2 0 0 0 20 4H4a2 2 0 0 0-.6.1l.7.6 7.9 6 7.9-6 .8-.6Z"/>
          </svg>
          <p class="text-gray-900 text-sm dark:text-gray-400"><%= candidate.email %></p>
        </div>
        <div class="flex items-center text-sm font-light text-gray-900 dark:text-gray-400">
          <svg class="w-4 h-4 mr-2 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 4a2.6 2.6 0 0 0-2 .9 6.2 6.2 0 0 0-1.8 6 12 12 0 0 0 3.4 5.5 12 12 0 0 0 5.6 3.4 6.2 6.2 0 0 0 6.6-2.7 2.6 2.6 0 0 0-.7-3L18 12.9a2.7 2.7 0 0 0-3.8 0l-.6.6a.8.8 0 0 1-1.1 0l-1.9-1.8a.8.8 0 0 1 0-1.2l.6-.6a2.7 2.7 0 0 0 0-3.8L10 4.9A2.6 2.6 0 0 0 8 4Z"/>
          </svg>
          <p class="text-gray-900 text-sm dark:text-gray-400"><%= candidate.phone %></p>
        </div>
        <% unless candidate.location.nil? %>
          <div class="flex items-center text-sm font-light text-gray-900 dark:text-gray-400">
            <svg class="w-4 h-4 mr-2 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2a8 8 0 0 1 6.6 12.6l-.1.1-.6.7-5.1 6.2a1 1 0 0 1-1.6 0L6 15.3l-.3-.4-.2-.2v-.2A8 8 0 0 1 11.8 2Zm3 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" clip-rule="evenodd"/>
            </svg>
            <p class="text-gray-900 text-sm dark:text-gray-400"><%= candidate.location %></p>
          </div>
        <% end %>
        <% unless candidate.birth_year.nil? %>
          <div class="flex items-center text-sm font-light text-gray-900 dark:text-gray-400">
            <svg class="w-4 h-4 mr-2 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M2 12a10 10 0 1 1 20 0 10 10 0 0 1-20 0Zm11-4a1 1 0 1 0-2 0v4c0 .3.1.5.3.7l3 3a1 1 0 0 0 1.4-1.4L13 11.6V8Z" clip-rule="evenodd"/>
            </svg>
            <p class="text-gray-900 text-sm dark:text-gray-400"><%= candidate.age %></p>
          </div>
        <% end %>
      </div>
    </div>
    <dl>
      <% unless candidate.biography.blank? %>
        <dt class="mb-2 text-sm font-medium leading-none text-gray-900 dark:text-white">Biography</dt>
        <dd class="mb-4 font-light text-gray-900 text-sm sm:mb-5 dark:text-gray-400">
          <div data-controller="read-more" data-read-more-more-text-value="Read more ↓" data-read-more-less-text-value="Read less ↑">
            <p class="line-clamp" data-read-more-target="content">
              <%= candidate.biography %>
            </p>
            <button data-action="read-more#toggle" class="text-blue-600">Read more ↓</button>
          </div>
        </dd>
      <% end %>
      <%= render partial: "candidate/profession", locals: { candidate: candidate } %>
      <%= render partial: "candidate/social", locals: { candidate: candidate } %>
      <%= render partial: "candidate/bucket", locals: { candidate: candidate } %>
      <% unless candidate.opening.blank? %>
        <dt class="mb-2 mt-5 font-semibold text-sm leading-none text-gray-900 dark:text-white">Associated with Job Opening</dt>
        <dd class="mb-4 sm:mb-5 ">
          <span class="bg-primary-100 text-primary-800 text-xs font-medium inline-flex items-center px-2 py-0.5 rounded-sm dark:bg-primary-200 dark:text-primary-800">
            <%= candidate.opening.title %>
          </span>
        </dd>
      <% end %>
      <% unless candidate.role.blank? %>
        <dt class="mb-2 mt-5 font-semibold text-sm leading-none text-gray-900 dark:text-white">Primary Skill</dt>
        <dd class="mb-4 sm:mb-5 ">
          <span class="bg-primary-100 text-primary-800 text-xs font-medium inline-flex items-center px-2 py-0.5 rounded-sm dark:bg-primary-200 dark:text-primary-800">
            <%= candidate.role.title %>
          </span>
        </dd>
      <% end %>
      <%= render partial: "candidate/other", locals: { candidate: candidate } %>
    </dl>
  </div>
</div>
