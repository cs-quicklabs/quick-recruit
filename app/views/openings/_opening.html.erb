<tr class="group border-b dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700">
  <th scope="row" class="px-4 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
    <div class="flex items-center hover:underline">
      <div class="hidden bg-red-100 bg-fuchsia-100 bg-orange-100 bg-yellow-100"></div>

      <div class="hidden text-red-800 text-fuchsia-800 text-orange-800 text-yellow-800"></div>

      <div class="hidden border-red-400 border-fuchsia-400 border-orange-400 border-yellow-400"></div>
      <span class="bg-<%= priority_color(opening.priority) %>-100 text-<%= priority_color(opening.priority) %>-800 text-xs font-medium me-2 px-1.5 py-0.5 rounded border border-<%= priority_color(opening.priority) %>-400"><%= opening.priority.titleize %></span>
      <a href="<%= opening_path(opening) %>"><%= opening.title %></a>
      <a href="<%= show_public_openings_path(opening) %>" class="font-medium ml-2 invisible group-hover:visible text-primary-600 dark:text-primary-500 inline-flex items-center" target="_blank">
        <svg
          class="w-4 h-4 text-gray-800 dark:text-white"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            fill-rule="evenodd"
            d="M5 7.8C6.7 6.3 9.2 5 12 5s5.3 1.3 7 2.8a12.7 12.7 0 0 1 2.7 3.2c.2.2.3.6.3 1s-.1.8-.3 1a2 2 0 0 1-.6 1 12.7 12.7 0 0 1-9.1 5c-2.8 0-5.3-1.3-7-2.8A12.7 12.7 0 0 1 2.3 13c-.2-.2-.3-.6-.3-1s.1-.8.3-1c.1-.4.3-.7.6-1 .5-.7 1.2-1.5 2.1-2.2Zm7 7.2a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"
            clip-rule="evenodd"
          />
        </svg>
      </a>
    </div>
  </th>
  <td class="px-4 py-2">
    12
  </td>
  <td class="px-4 py-2"><%= opening.role.title %></td>
  <td class="px-4 py-2">Jan 12, 2023</td>
  <td class="px-4 py-2">23 days</td>
  <td class="px-4 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
    <% if opening.active? %>
      <div class="flex items-center">
        <div class="w-3 h-3 mr-2 bg-green-500 border rounded-full"></div>
        Active
      </div>
    <% else %>
      <div class="flex items-center">
        <div class="w-3 h-3 mr-2 bg-red-500 border rounded-full"></div>
        Inactive
      </div>
    <% end %>
  </td>
  <td class="px-4 py-2"><%= opening.owner.name %></td>
</tr>
