<div class="flex min-h-full flex-col">
  <!-- 3 column wrapper -->
  <div class="mx-auto w-full grow lg:flex xl:px-2 -ml-4">
    <!-- Left sidebar & main wrapper -->
    <div class="w-80 xl:flex"><%= render partial: "member/profile", locals: { member: @member } %></div>

    <div class="flex-1">
      <!-- Main area -->
      <%= render partial: "member/nav", locals: { member: @member } %>

      <div class="relative overflow-x-auto">
        <table class="text-sm text-left text-gray-500 dark:text-gray-400 w-full">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th scope="col" class="px-4 py-3">Champion Name</th>
              <th scope="col" class="px-4 py-3 whitespace-nowrap">Owner</th>
              <th scope="col" class="px-4 py-3 whitespace-nowrap">Last Updated On</th>
              <th scope="col" class="px-4 py-3 whitespace-nowrap">Last known Status</th>
              <th scope="col" class="px-4 py-3">Bucket</th>
            </tr>
          </thead>

          <tbody><%= render partial: "champions", collection: @champions, as: :candidate %></tbody>
        </table>

        <% if @champions.count > 0 %>
          <p class="p-4 text-sm text-gray-500">This list is showing champions only who cleared hiring process in past. To see other candidates, please <span><a href="<%= "/report/candidates?owner_id=" + current_user.id.to_s %>" class="text-blue-600 dark:text-blue-500 hover:underline text-sm font-medium">click here</a></span> .</p>
        <% end %>
      </div>
    </div>

    <div class="shrink-0 border-t border-gray-200 px-4 py-6 sm:px-6 lg:w-80 lg:border-l lg:border-t-0 lg:pr-8 xl:pr-6">
      <!-- Right column area -->
      <div>
        <h5 class="mr-3 font-semibold dark:text-white">Candidates</h5>

        <p class="text-gray-500 dark:text-gray-400 text-sm mb-4">Following candidates are associated with you across different buckets.</p>

        <div class="flex flex-col"><%= display_owner_associations(current_user) %></div>
      </div>
    </div>
  </div>
</div>
