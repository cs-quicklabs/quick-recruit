<div class="border-b bg-gray-50 border-gray-200 py-4 lg:pl-8 w-full xl:shrink-0 xl:border-b-0 xl:border-r xl:pl-6">
  <!-- Left column area -->
  <!-- drawer component -->
  <div id="readUserDrawerAdvanced" class="pr-4 overflow-y-auto h-screen bg-gray-50 dark:bg-gray-800">
    <div class="flex items-center mb-4 sm:mb-5">
      <div>
        <h4 id="drawer-label" class="flex items-center mb-1 text-lg font-semibold leading-none text-gray-900 dark:text-white">
          <%= member.name %>
          <a href="<%= edit_member_path(member) %>" data-tooltip-target="tooltip-edit" class="p-1 ml-1 text-gray-500 rounded-xs hover:text-gray-900 dark:text-gray-400 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700">
            <svg
              class="w-5 h-5"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke="currentColor"
                stroke-linecap="square"
                stroke-linejoin="round"
                stroke-width="2"
                d="M7 19H5a1 1 0 0 1-1-1v-1a3 3 0 0 1 3-3h1m4-6a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm7.4 1.6a2 2 0 0 1 0 2.7l-6 6-3.4.7.7-3.4 6-6a2 2 0 0 1 2.7 0Z"
              />
            </svg>
            <span class="sr-only">Edit Profile</span>
          </a>
        </h4>

        <div id="tooltip-edit" role="tooltip" class="inline-block text-xs absolute invisible z-10 py-1 px-2 text-xs font-medium text-white bg-gray-900 rounded-xs shadow-xs opacity-0 transition-opacity duration-300 tooltip dark:bg-gray-700">
          Edit profile
          <div class="tooltip-arrow" data-popper-arrow></div>
        </div>

        <div class="flex items-center text-sm font-light text-gray-900 dark:text-gray-400">
          <svg
            class="w-4 h-4 mr-2 text-gray-800 dark:text-white"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path d="M2 5.6V18c0 1.1.9 2 2 2h16a2 2 0 0 0 2-2V5.6l-.9.7-7.9 6a2 2 0 0 1-2.4 0l-8-6-.8-.7Z" />
            <path d="M20.7 4.1A2 2 0 0 0 20 4H4a2 2 0 0 0-.6.1l.7.6 7.9 6 7.9-6 .8-.6Z" />
          </svg>
          <p class="text-gray-900 text-sm dark:text-gray-400"><%= member.email %></p>
        </div>

        <div class="flex items-center text-sm font-light text-gray-900 dark:text-gray-400">
          <svg
            class="w-4 h-4 mr-2 text-gray-800 dark:text-white"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path d="M8 4a2.6 2.6 0 0 0-2 .9 6.2 6.2 0 0 0-1.8 6 12 12 0 0 0 3.4 5.5 12 12 0 0 0 5.6 3.4 6.2 6.2 0 0 0 6.6-2.7 2.6 2.6 0 0 0-.7-3L18 12.9a2.7 2.7 0 0 0-3.8 0l-.6.6a.8.8 0 0 1-1.1 0l-1.9-1.8a.8.8 0 0 1 0-1.2l.6-.6a2.7 2.7 0 0 0 0-3.8L10 4.9A2.6 2.6 0 0 0 8 4Z" />
          </svg>
          <p class="text-gray-900 text-sm dark:text-gray-400"><%= member.phone %></p>
        </div>

        <div class="flex items-center text-sm font-light text-gray-900 dark:text-gray-400">
          <svg
            class="w-4 h-4 mr-2 text-gray-800 dark:text-white"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path fill-rule="evenodd" d="M12 2a8 8 0 0 1 6.6 12.6l-.1.1-.6.7-5.1 6.2a1 1 0 0 1-1.6 0L6 15.3l-.3-.4-.2-.2v-.2A8 8 0 0 1 11.8 2Zm3 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" clip-rule="evenodd" />
          </svg>
          <p class="text-gray-900 text-sm dark:text-gray-400"><%= member.location %></p>
        </div>
      </div>
    </div>
    <dl>
      <dt class="mb-2 text-sm font-medium leading-none text-gray-900 dark:text-white">Biography</dt>
      <dd class="mb-4 font-light text-gray-900 text-sm sm:mb-5 dark:text-gray-400"><%= member.biography %></dd>

      <%= render partial: "candidate/social", locals: { candidate: member } %>
      <dt class="mb-2 font-semibold text-sm leading-none text-gray-900 dark:text-white">Role</dt>
      <dd class="mb-4 sm:mb-5">
        <span class="bg-primary-100 text-primary-800 text-xs font-medium inline-flex items-center px-2 py-0.5 rounded-sm dark:bg-primary-200 dark:text-primary-800">
          <svg
            class="mr-1 w-3 h-3"
            aria-hidden="true"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"></path>
          </svg>
          <%= member.role.titleize %>
        </span>
      </dd>
      <dt class="mb-2 font-semibold leading-none text-gray-900 text-sm dark:text-white">Professional Details</dt>
      <dd class="flex items-center text-sm font-light text-gray-900 dark:text-gray-400">
        <svg
          class="w-4 h-4 mr-2 text-gray-800 dark:text-white"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            fill-rule="evenodd"
            d="M4 4c0-.6.4-1 1-1h14a1 1 0 1 1 0 2v14a1 1 0 1 1 0 2H5a1 1 0 1 1 0-2V5a1 1 0 0 1-1-1Zm5 2a1 1 0 0 0-1 1v1c0 .6.4 1 1 1h1c.6 0 1-.4 1-1V7c0-.6-.4-1-1-1H9Zm5 0a1 1 0 0 0-1 1v1c0 .6.4 1 1 1h1c.6 0 1-.4 1-1V7c0-.6-.4-1-1-1h-1Zm-5 4a1 1 0 0 0-1 1v1c0 .6.4 1 1 1h1c.6 0 1-.4 1-1v-1c0-.6-.4-1-1-1H9Zm5 0a1 1 0 0 0-1 1v1c0 .6.4 1 1 1h1c.6 0 1-.4 1-1v-1c0-.6-.4-1-1-1h-1Zm-3 4a2 2 0 0 0-2 2v3h2v-3h2v3h2v-3a2 2 0 0 0-2-2h-2Z"
            clip-rule="evenodd"
          />
        </svg>
        <p class="text-gray-900 text-sm dark:text-gray-400"><%= member.current_company %></p>
      </dd>
      <dd class="flex items-center text-sm font-light text-gray-900 dark:text-gray-400">
        <svg
          class="w-4 h-4 mr-2 text-gray-800 dark:text-white"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            fill-rule="evenodd"
            d="M10 2a3 3 0 0 0-3 3v1H5a3 3 0 0 0-3 3v2.4l1.4.7a7.7 7.7 0 0 0 .7.3 21 21 0 0 0 16.4-.3l1.5-.7V9a3 3 0 0 0-3-3h-2V5a3 3 0 0 0-3-3h-4Zm5 4V5c0-.6-.4-1-1-1h-4a1 1 0 0 0-1 1v1h6Zm6.4 7.9.6-.3V19a3 3 0 0 1-3 3H5a3 3 0 0 1-3-3v-5.4l.6.3a10 10 0 0 0 .7.3 23 23 0 0 0 18-.3h.1L21 13l.4.9ZM12 10a1 1 0 1 0 0 2 1 1 0 1 0 0-2Z"
            clip-rule="evenodd"
          />
        </svg>
        <p class="text-gray-900 text-sm dark:text-gray-400"><%= member.current_title %></p>
      </dd>
    </dl>
  </div>
</div>
