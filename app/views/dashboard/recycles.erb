<turbo-frame id="recycles">
  <div class="px-0 lg:px-4">
    <ul role="list" class="divide-y divide-gray-100">
      <% @recycles.each do |candidate| %>
        <li class="flex justify-between gap-x-6 py-2">
          <div class="flex min-w-0 gap-x-4">
            <div class="min-w-0 flex-auto">
              <p class="text-sm font-semibold text-gray-900 hover:underline"><a href="<%= candidate_timeline_path(candidate)%>"><%= candidate.name %></a></p>
              <p class="mt-1 truncate text-xs text-gray-500"><%= candidate.opening.title %></p>
            </div>
          </div>
          <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
            <p class="mt-1 text-xs text-gray-500">Owner: <%= candidate.owner.name %></p>
          </div>
        </li>

      <% end %>
    </ul>
  </turbo-frame>
