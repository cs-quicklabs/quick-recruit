<section class="bg-gray-50 dark:bg-gray-900 py-3 sm:py-5 min-h-screen">
  <div class="px-4 mx-auto max-w-screen-2xl lg:px-8">
    <div class="relative overflow-hidden bg-white shadow-md dark:bg-gray-800 sm:rounded-sm">
      <div class=" divide-y dark:divide-gray-700">
        <div class="flex-row items-center justify-between p-4 space-y-3 sm:flex sm:space-y-0 sm:space-x-4">
          <div>
            <h1 class="mr-3 text-lg font-semibold dark:text-white">Archived Candidates</h1>
            <p class="text-gray-500 dark:text-gray-400 text-sm">Following <span class="font-bold"><%= @candidates.count %></span> candidates were either rejected or we do not want to process them again in future.</p>
          </div>
          <a type="button" href="/candidates/new"
                class="btn-primary">
            Add new candidate
          </a>
        </div>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th scope="col" class="px-4 py-3">Name</th>
              <th scope="col" class="px-4 py-3">Email</th>
              <th scope="col" class="px-4 py-3">Job Association</th>
              <th scope="col" class="px-4 py-3 whitespace-nowrap">Owner</th>
              <th scope="col" class="px-4 py-3 whitespace-nowrap">Archived On</th>
              <th scope="col" class="px-4 py-3 whitespace-nowrap">Last known Status</th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "archive", collection: @candidates, as: :candidate %>
          </tbody>
        </table>
      </div>
      <div class="flex justify-end mt-2 mb-6 mr-2">
        <%== render partial: "shared/paginator", locals: { pagy: @pagy } %>
      </div>
    </div>
  </div>
</section>
