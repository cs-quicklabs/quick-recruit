<div class="py-8 px-4 mx-auto max-w-4xl lg:py-8">
  <h1 class="mr-3 text-lg font-semibold dark:text-white">Edit <%= @opening.title %> Job Description</h1>
  <p class="text-gray-500 dark:text-gray-400 text-sm">Edit Job description for this job opening. Job descriptions are available as public and can also be sent to candidates via email.</p>
  <%= form_with model: @opening, url: opening_description_path(@opening), method: :patch do |form| %>
    <div class="field mt-8">
      <%= form.rich_text_area :description %>
      <div class="flex items-center space-x-2">
        <button type="submit" class="btn-primary mt-4">
          Edit Opening
        </button>
        <a type="button" href="<%= opening_description_index_path(@opening) %>"
                class="btn-secondary mt-4">
          Cancel
        </a>
      </div>
    </div>
  <% end %>
</div>
