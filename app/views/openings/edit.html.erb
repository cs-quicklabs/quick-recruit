<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-2xl lg:py-8">
    <%= render "shared/form_messages", resource: @form, message: local_assigns[:message] %>
    <%= render "shared/form_header", title: "Edit Job Opening", subtitle: "Please update the details of new Job Opening." %>
    <%= tailwind_form_with(model: @opening, id: dom_id(@opening)) do |form| %>
      <div class="mt-4 mb-2 grid gap-4 sm:gap-6"></div>

      <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
        <div class="sm:col-span-2 space-y-4">
          <div><%= form.text_field :title, "Opening Name", required: true, placeholder: "eg. Android Developer" %></div>

          <div>
            <label for="user-role" class="inline-flex items-center mb-1 text-sm font-medium text-gray-900 dark:text-white">
              Primary skill
              <button
                type="button"
                data-tooltip-target="tooltip-user-skill"
                data-tooltip-style="dark"
                class="ml-1"
              >
                <svg
                  aria-hidden="true"
                  class="w-4 h-4 text-gray-400 hover:text-gray-900 dark:hover:text-white dark:text-gray-500"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
                </svg>
                <span class="sr-only">Show information</span>
              </button>
              <div id="tooltip-user-skill" role="tooltip" class="inline-block absolute invisible z-10 py-1 px-2 max-w-sm text-xs font-normal text-white bg-gray-900 rounded-sm shadow-sm opacity-0 tooltip dark:bg-gray-700">
                Select what is primary skill of this job opening.
                <div class="tooltip-arrow" data-popper-arrow></div>
              </div>
            </label>
            <%= form.collection_select(:role_id, @roles, :id, :title, { :prompt => "Select Primary Skill" }, :class => "form-text-field", :required => true) %>
          </div>

          <div><label for="user-role" class="inline-flex items-center mb-1 text-sm font-medium text-gray-900 dark:text-white">Select if Active</label><%= form.select(:active, [["Active", true], ["Inactive", false]], {}, :class => "form-text-field") %></div>

          <div>
            <label for="user-role" class="inline-flex items-center mb-1 text-sm font-medium text-gray-900 dark:text-white">Priority</label>
            <%= select_tag :priority, options_for_select(Opening.priorities.map { |k, v| [k.humanize.capitalize, k] }, @opening.priority), class: "form-text-field", :name => "opening[priority]" %>
          </div>

          <div><label for="user-role" class="inline-flex items-center mb-1 text-sm font-medium text-gray-900 dark:text-white">Owner</label><%= form.collection_select(:owner_id, User.owners, :id, :name, { :prompt => "Select Owner" }, :class => "form-text-field", :required => true) %></div>

          <div><%= form.text_field :resume_screening_checklist, "Resume Screening Checklist (Optional)", required: false %></div>

          <div><%= form.text_field :telephonic_screening_checklist, "Telephonic Screening Checklist (Optional)", required: false %></div>

          <div><%= form.text_field :first_round_score, "First Round Score Survey (Optional)", required: false %></div>

          <div><%= form.text_field :second_round_score, "Second Round Score Survey (Optional)", required: false %></div>

          <div><%= form.text_field :hr_round_score, "HR Round Score Survey (Optional)", required: false %></div>
        </div>
      </div>

      <button type="submit" class="btn-primary mt-4">
        Edit Job Opening
      </button>

      <%= link_to "Cancel", :back, class: "btn-secondary" %>
    <% end %>
  </div>
</section>
