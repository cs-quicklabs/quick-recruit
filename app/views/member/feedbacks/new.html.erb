<div class="py-8 px-4 mx-auto max-w-4xl lg:py-8">
  <h1 class="mr-3 text-lg font-semibold dark:text-white">Submit a new feedback</h1>
  <p class="text-gray-500 dark:text-gray-400 text-sm">Submit a new feedback which can help your team members.</p>
  <%= tailwind_form_with(model: @feedback, id: dom_id(@feedback), url: member_feedbacks_path(@member), method: "POST") do |form| %>
    <div class="mt-4 mb-2 grid gap-4 sm:gap-6">
      <div>
        <%= form.text_field :title, "Feedback Title", required: true, placeholder: "Please enter suitable title for feedback" %>
      </div>
    </div>

    <div class="mt-4">
          <label for="user-role" class="inline-flex items-center mb-2 text-sm font-medium text-gray-900 dark:text-white">
            Feedback Nature
          </label>
          <%= select_tag :nature, options_for_select(Feedback.natures.map { |k, v| [k.humanize.capitalize, k] }), class: "form-text-field", :name => "feedback[nature]" %>  
        </div>

    <div class="field mt-8">
      <%= form.rich_text_area :content, required: true %>
      <div class="flex items-center space-x-2 mt-4">
        <button type="submit" class="btn-primary" name="commit" value="submitted">
          Submit Feedback
        </button>
        <button type="submit" class="btn-secondary" name="commit" value="draft">
          Save as Draft
        </button>
        <div class="flex self-end items-right">
          <a type="button" href="<%= member_feedbacks_path(@member) %>"
                class="btn-secondary justify-self-end">
            Cancel
          </a>
        </div>
      </div>
    </div>
  <% end %>
</div>
