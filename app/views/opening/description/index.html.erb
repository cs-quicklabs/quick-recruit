<!--
  This example requires updating your template:

  ```
  <html class="h-full bg-white">
  <body class="h-full">
  ```
-->
<div class="flex min-h-full flex-col">
  <!-- 3 column wrapper -->
  <div class="mx-auto w-full grow lg:flex xl:px-2 -ml-4">
    <!-- Left sidebar & main wrapper -->
    <div class="w-80 xl:flex">
      <%= render partial: "opening/profile", locals: { opening: @opening } %>
    </div>
    <div class="flex-1">
      <!-- Main area -->
      <%= render partial: "opening/nav", locals: { opening: @opening } %>
      <div class="p-6 text-sm">
        <%= @opening.description %>
      </div>
    </div>
    <div class="shrink-0 border-t border-gray-200 px-4 py-6 sm:px-6 lg:w-80 lg:border-l lg:border-t-0 lg:pr-8 xl:pr-6">
      <!-- Right column area -->
      <div>
        <h5 class="mr-3 font-semibold dark:text-white">Edit Job Description </h5>
        <p class="text-gray-500 dark:text-gray-400 text-sm mb-4">Job Descriptions are open to public and can also be sent to candidates via emails.</p>
        <div class="flex space-x-2">
          <a type="button" href="<%= edit_opening_description_path(@opening, @opening) %>"
                class="btn-primary">
            Edit Job Description
          </a>
          <a type="button" target="_blank" href="<%= show_public_openings_path(@opening) %>"
                class="btn-secondary">
            View
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
