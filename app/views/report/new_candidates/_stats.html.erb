<div class="border-b border-gray-200">
  <dl class="grid grid-cols-1 overflow-hidden bg-white divide-y divide-gray-200 md:grid-cols-6 md:divide-y-0 md:divide-x">
    <div class="px-4 py-2 sm:p-2">
      <dt class="text-base font-normal text-center text-gray-900">
        Total
      </dt>
      <div class="flex items-baseline justify-center text-xl font-semibold text-gray-600">
        <%= stats.total %>
      </div>
    </div>
    <div class="px-4 py-2 sm:p-2">
      <dt class="text-base font-normal text-center text-gray-900">
        Pipeline
      </dt>
      <div class="flex items-baseline justify-center text-xl font-semibold text-gray-600">
        <%= stats.pipeline %>
      </div>
    </div>
    <div class="px-4 py-2 sm:p-2">
      <dt class="text-base font-normal text-center text-gray-900">
        First Round
      </dt>
      <div class="flex items-baseline justify-center text-xl font-semibold text-gray-600">
        <%= stats.first_round %>
      </div>
    </div>
    <div class="px-4 py-2 sm:p-2">
      <dt class="text-base font-normal text-center text-gray-900">
        Second Round
      </dt>
      <div class="flex items-baseline justify-center text-xl font-semibold text-gray-600">
        <%= stats.second_round %>
      </div>
    </div>
    <div class="px-4 py-2 sm:p-2">
      <dt class="text-base font-normal text-center text-gray-900">
        Offered
      </dt>
      <div class="flex items-baseline justify-center text-xl font-semibold text-gray-600">
        <%= stats.offered %>
      </div>
    </div>
    <div class="px-4 py-2 sm:p-2">
      <dt class="text-base font-normal text-center text-gray-900">
        Joined
      </dt>
      <div class="flex items-baseline justify-center text-xl font-semibold text-gray-600">
        <%= stats.joined %>
      </div>
    </div>
  </dl>
</div>
