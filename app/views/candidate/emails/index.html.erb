<!--
  This example requires updating your template:

  ```
  <html class="h-full bg-white">
  <body class="h-full">
  ```
-->
<div class="flex min-h-full flex-col">
  <!-- 3 column wrapper -->
  <div class="mx-auto w-full max-w-screen-2xl grow lg:flex xl:px-2 -ml-4">
    <!-- Left sidebar & main wrapper -->
    <div class="w-80 xl:flex">
      <%= render partial: "candidate/profile", locals: { candidate: @candidate } %>
    </div>
    <div class="flex-1">
      <!-- Main area -->
      <%= render partial: "candidate/nav", locals: { candidate: @candidate } %>
      <div class="relative overflow-x-auto">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th scope="col" class="px-4 py-2">
                Email
              </th>
              <th scope="col" class="px-4 py-2">
                Sent By
              </th>
              <th scope="col" class="px-4 py-2">
                Sent On
              </th>
              <th scope="col" class="px-4 py-2">
                Status
              </th>
              <th scope="col" class="px-4 py-2">
                Action
              </th>
            </tr>
          </thead>
          <tbody>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <th scope="row" class="flex items-center px-4 py-2 text-gray-900 whitespace-nowrap dark:text-white">
                <div class="">
                  <div class="text-sm font-semibold">Rejection Email</div>
                </div>
              </th>
              <td class="px-4 py-2">
                Aashish Dhawan
              </td>
              <td class="px-4 py-2">
                Jun 22, 2024 10:00 AM
              </td>
              <td class="px-4 py-2">
                <div class="flex items-center">
                  <div class="h-2.5 w-2.5 rounded-full bg-green-500 me-2"></div>
                  Read
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="shrink-0 border-t border-gray-200 px-4 py-4 sm:px-6 lg:w-80 lg:border-l lg:border-t-0 lg:pr-8 xl:pr-6">
      <!-- Right column area -->
      <div>
        <h5 class="mr-3 font-semibold dark:text-white">Send Email</h5>
        <p class="text-gray-500 dark:text-gray-400 text-sm">Select which email you want to send to the candidate.</p>
        <%= button_to "Rejection Email", candidate_emails_path(@candidate, email: 0), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline text-sm" %>
      </div>
    </div>
  </div>
</div>
