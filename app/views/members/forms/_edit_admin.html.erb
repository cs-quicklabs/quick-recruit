<%= tailwind_form_with(model: member, id: dom_id(member), url: member_path(member)) do |form| %>
  <%= render "shared/error_messages", resource: member %>
  <%= render "shared/form_messages", resource: member, message: local_assigns[:message] %>
  <h2 class="mb-4 mt-8 text-xl font-semibold leading-none text-gray-900 dark:text-white">Personal Information</h2>

  <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
    <div><%= form.text_field :first_name, "First Name", required: true, placeholder: "John" %></div>

    <div class="w-full"><%= form.text_field :last_name, "Last Name", required: true, placeholder: "Doe" %></div>

    <div><%= form.text_field :email, "Email", required: true, placeholder: "name@domain.com" %></div>

    <div><%= form.text_field :phone, "Phone", required: true, placeholder: "9876543210" %></div>

    <div><%= form.text_field :location, "Current City", required: true, placeholder: "Noida" %></div>

    <div class="sm:col-span-2"><%= form.text_area :biography, "Biography", required: true, placeholder: "Tell us about yourself..", style: "height:120px" %></div>
  </div>

  <h2 class="mb-4 mt-8 text-xl font-semibold leading-none text-gray-900 dark:text-white">Social Information</h2>

  <div class="grid gap-4 mb-4 md:gap-6 md:grid-cols-2 sm:mb-8">
    <div><%= form.text_field :linkedin, "Linkedin", placeholder: "Linkedin Profile URL" %></div>

    <div><%= form.text_field :portfolio, "Portfolio Or Resume Link", placeholder: "Portfolio or resume URL" %></div>

    <div><%= form.text_field :github, "Github", placeholder: "Github profile URL" %></div>

    <div><%= form.text_field :twitter, "Twitter", placeholder: "Twitter Profile" %></div>

    <div><%= form.text_field :website, "Personal Website", placeholder: "Personal Website URL" %></div>

    <div><%= form.text_field :booking_url, "Meeting Booking URL", placeholder: "Meeting Booking URL" %></div>
  </div>

  <h2 class="mb-4 mt-8 text-xl font-semibold leading-none text-gray-900 dark:text-white">Professional Information</h2>

  <div class="grid gap-4 mb-4 md:gap-6 md:grid-cols-2 sm:mb-8">
    <div><%= form.text_field :current_title, "Current Job Title", placeholder: "Senior Software Engineer" %></div>
    <div><%= form.text_field :current_company, "Current Employer", placeholder: "Current Company Name" %></div>
  </div>

  <h2 class="mb-4 mt-8 text-xl font-semibold leading-none text-gray-900 dark:text-white">Admin Land</h2>

  <div class="grid gap-4 mb-4 md:gap-6 md:grid-cols-2 sm:mb-8">
    <div>
      <label for="user-role" class="inline-flex items-center mb-2 text-sm font-medium text-gray-900 dark:text-white">
        User Role
        <button
          type="button"
          data-tooltip-target="tooltip-user-role"
          data-tooltip-style="dark"
          class="ml-1"
        >
          <svg
            aria-hidden="true"
            class="w-4 h-4 text-gray-400 hover:text-gray-900 dark:hover:text-white dark:text-gray-500"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
          </svg>
          <span class="sr-only">Show information</span>
        </button>
        <div id="tooltip-user-role" role="tooltip" class="inline-block absolute invisible z-10 py-1 px-2 max-w-sm text-xs font-normal text-white bg-gray-900 rounded-sm shadow-sm opacity-0 tooltip dark:bg-gray-700">
          A team member can be either data collector, recruiter, interviewer, admin, recruiter admin or super admin.
          <div class="tooltip-arrow" data-popper-arrow></div>
        </div>
      </label>

      <%= select_tag :role, options_for_select(User.roles.map { |k, v| [k.humanize.titleize, k] }, member.role), class: "form-text-field", :name => "user[role]" %>
    </div>
    <div><label for="user-role" class="inline-flex items-center mb-1 text-sm font-medium text-gray-900 dark:text-white">Select if Active</label><%= form.select(:active, [["Active", true], ["Inactive", false]], {}, :class => "form-text-field") %></div>
  </div>

  <button type="submit" class="btn-primary">
    Update Information
  </button>

  <%= link_to "Cancel", :back, class: "btn-secondary" %>
<% end %>
