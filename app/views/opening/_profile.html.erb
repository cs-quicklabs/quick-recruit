<div class="border-b bg-gray-50 border-gray-200 py-4 lg:pl-8 w-full lg:shrink-0 lg:border-b-0 border-r xl:pl-6">
  <!-- Left column area -->
  <!-- drawer component -->
  <div id="readUserDrawerAdvanced" class="pr-4  bg-gray-50  dark:bg-gray-800">
    <div class="flex items-center mb-4 sm:mb-5">
      <div>
        <h4 id="drawer-label" class="flex items-center mb-1 text-lg font-semibold leading-none text-gray-900  dark:text-white"><%= opening.title %>
          <% if policy(:opening).edit? %>
            <a href="<%= edit_opening_path(opening) %>" data-tooltip-target="tooltip-edit" class="p-1 ml-1 text-gray-500 rounded-sm hover:text-gray-900 dark:text-gray-400 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke="currentColor" stroke-linecap="square" stroke-linejoin="round" stroke-width="2" d="M7 19H5a1 1 0 0 1-1-1v-1a3 3 0 0 1 3-3h1m4-6a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm7.4 1.6a2 2 0 0 1 0 2.7l-6 6-3.4.7.7-3.4 6-6a2 2 0 0 1 2.7 0Z"/></svg>
              <span class="sr-only">Edit Opening</span>
            </a>
            <div id="tooltip-edit" role="tooltip" class="inline-block text-xs absolute invisible z-10 py-1 px-2 text-xs font-medium text-white bg-gray-900 rounded-sm shadow-sm opacity-0 transition-opacity duration-300 tooltip dark:bg-gray-700">
              Edit Opening
              <div class="tooltip-arrow" data-popper-arrow></div>
            </div>
          <% end %>
          <a href="<%= show_public_openings_path(opening) %>" target="_blank" data-tooltip-target="tooltip-view" class="p-1 text-gray-500 rounded-sm hover:text-gray-900 dark:text-gray-400 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700">
            <svg class="w-5 h-5 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M11.403 5H5a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-6.403a3.01 3.01 0 0 1-1.743-1.612l-3.025 3.025A3 3 0 1 1 9.99 9.768l3.025-3.025A3.01 3.01 0 0 1 11.403 5Z" clip-rule="evenodd"/>
              <path fill-rule="evenodd" d="M13.232 4a1 1 0 0 1 1-1H20a1 1 0 0 1 1 1v5.768a1 1 0 1 1-2 0V6.414l-6.182 6.182a1 1 0 0 1-1.414-1.414L17.586 5h-3.354a1 1 0 0 1-1-1Z" clip-rule="evenodd"/>
            </svg>
          </a>
          <div id="tooltip-view" role="tooltip" class="inline-block text-xs absolute invisible z-10 py-1 px-2 text-xs font-medium text-white bg-gray-900 rounded-sm shadow-sm opacity-0 transition-opacity duration-300 tooltip dark:bg-gray-700">
            View Opening
            <div class="tooltip-arrow" data-popper-arrow></div>
          </div>
        </h4>
        <% unless opening.location.nil? %>
          <div class="flex items-center text-sm font-light text-gray-900 dark:text-gray-400">
            <svg class="w-4 h-4 mr-2 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2a8 8 0 0 1 6.6 12.6l-.1.1-.6.7-5.1 6.2a1 1 0 0 1-1.6 0L6 15.3l-.3-.4-.2-.2v-.2A8 8 0 0 1 11.8 2Zm3 8a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" clip-rule="evenodd"/>
            </svg>
            <p class="text-gray-900 text-sm dark:text-gray-400"><%= opening.location %></p>
          </div>
        <% end %>
      </div>
    </div>
    <% unless opening.role.blank? %>
      <dt class="mb-2 mt-5 font-semibold text-sm leading-none text-gray-900 dark:text-white">Primary Skill</dt>
      <dd class="mb-4 sm:mb-5 ">
        <span class="bg-primary-100 text-primary-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded dark:bg-primary-200 dark:text-primary-800">
          <%= opening.role.title %>
        </span>
      </dd>
    <% end %>
    <div class="mb-24">
      <dt class="mb-2 font-semibold leading-none text-gray-900 text-sm dark:text-white">Other Details</dt>
      <dd class="flex items-center text-sm font-light text-gray-900 dark:text-gray-400">
        <svg class="w-4 h-4 mr-2 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-width="2" d="M7 17v1c0 .6.4 1 1 1h8c.6 0 1-.4 1-1v-1a3 3 0 0 0-3-3h-4a3 3 0 0 0-3 3Zm8-9a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
        </svg>
        <p class="text-gray-900 text-sm dark:text-gray-400">Owner: <%= opening.owner.name %></p>
      </dd>
      <dd class="flex items-center text-sm font-light text-gray-900 dark:text-gray-400">
        <svg class="w-4 h-4 mr-2 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
        </svg>
        <p class="text-gray-900 text-sm dark:text-gray-400">Created On: <%= display_date(opening.created_at) %></p>
      </dd>
      <dd class="flex items-center text-sm font-light text-gray-900 dark:text-gray-400">
        <svg class="w-4 h-4 mr-2 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
        </svg>
        <p class="text-gray-900 text-sm dark:text-gray-400">Updated On: <%= display_date(opening.updated_at) %></p>
      </dd>
    </div>
  </div>
</div>
