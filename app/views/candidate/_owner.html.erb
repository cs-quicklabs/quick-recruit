<div data-controller="candidate" id="owner_<%= dom_id(candidate) %>">
  <div class="flex items-center">
    <svg class="w-4 h-4 mr-2 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
      <path stroke="currentColor" stroke-width="2" d="M7 17v1c0 .6.4 1 1 1h8c.6 0 1-.4 1-1v-1a3 3 0 0 0-3-3h-4a3 3 0 0 0-3 3Zm8-9a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
    </svg>
    <p class="text-gray-900 text-sm dark:text-gray-400">Owner: <%= candidate.owner.name %></p>
    <% if policy(candidate).update_owner? %>
      <div id="editButton"  data-tooltip-target="tooltip-owner" data-dropdown-toggle="ownerButton" class="cursor-pointer ml-1 text-gray-500 rounded-sm hover:text-gray-900 dark:text-gray-400 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700">
        <svg class="w-4 h-4 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m10.8 17.8-6.4 2.1 2.1-6.4m4.3 4.3L19 9a3 3 0 0 0-4-4l-8.4 8.6m4.3 4.3-4.3-4.3m2.1 2.1L15 9.1m-2.1-2 4.2 4.2"/>
        </svg>
      </div>
      <div id="tooltip-owner" role="tooltip" class="inline-block text-xs absolute invisible z-10 py-1 px-2 text-xs font-medium text-white bg-gray-900 rounded-sm shadow-sm opacity-0 transition-opacity duration-300 tooltip dark:bg-gray-700">
        Edit Owner
        <div class="tooltip-arrow" data-popper-arrow></div>
      </div>
      <!-- Dropdown menu -->
      <div id="ownerButton"  data-candidate-target="menu" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-40 dark:bg-gray-700 dark:divide-gray-600">
        <ul class="p-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="editButton" >
          <% User.recruiters.each do |user| %>
            <li class="cursor-pointer" data-action="click->candidate#update_owner" data-candidate-owner-param="<%= user.id %>" data-candidate-candidate-param="<%= candidate.id %>">
              <div class="flex p-1 rounded hover:bg-gray-100 dark:hover:bg-gray-600 ">
                <div class="ms-2 text-xs">
                  <label class="cursor-pointer font-medium text-gray-900 dark:text-gray-300">
                    <div><%= user.name %></div>
                  </label>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>