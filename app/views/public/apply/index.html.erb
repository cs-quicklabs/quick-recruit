      <h1 class="text-2xl font-bold dark:text-white">
        Work At Crownstack
      </h1>
      <p class="text-gray-500 dark:text-gray-400 text-sm mb-6">
        Please tell us about your contact details and we will be in touch.
      </p>
    </div>
    <%= tailwind_form_with(model: @candidate, id: dom_id(@candidate), url: public_apply_path) do |form| %>
      <%= render "shared/error_messages", resource: @candidate %>
      <%= render "shared/form_messages", resource: @candidate, message: local_assigns[:message] %>
      <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
        <div class="sm:col-span-2">
          <div class="py-4">
            <h2 class="text-lg mb-1 font-semibold leading-none text-gray-900 dark:text-white">Upload Resume</h2>
            <label class="block mb-2 text-xs text-gray-500 dark:text-white" for="file_input">Please upload PDF resume file only. Other file types fill result in automatic rejection by our ATS.</label>
            <div class="items-center w-full sm:flex">
              <div class="w-full">
                <%= form.file_field :resume, accept: 'application/pdf', required: true  %>
              </div>
            </div>
          </div>
          <h2 class="mt-8 text-xl font-semibold leading-none text-gray-900 dark:text-white">Personal Information</h2>
        </div>
        <div>
          <%= form.text_field :first_name, "First Name", required: true, placeholder: "John" %>
        </div>
        <div class="w-full">
          <%= form.text_field :last_name, "Last Name", required: true, placeholder: "Doe" %>
        </div>
        <div>
          <%= form.text_field :email, "Email", required: true, placeholder: "name@domain.com" %>
        </div>
        <div>
          <%= form.text_field :phone, "Phone", required: true, placeholder: "9876543210", minlength: 10, maxlength: 10, pattern: "[0-9]{10}"%>
        </div>
        <div>
          <%= form.text_field :location, "Current City", required: true, placeholder: "Noida" %>
        </div>
        <div>
          <%= form.text_field :birth_year, "Birth Year", required: true, placeholder: "1989", minlength: 4, maxlength: 4, pattern: "[0-9]{4}" %>
        </div>
        <%= form.hidden_field :opening_id, value: params[:opening_id] %>
        <div class="sm:col-span-2 mb-4">
          <%= form.text_area :biography, "Tell us about yourself", placeholder: "Some personal and professional details about yourself..", style: "height:120px" %>
        </div>
      </div>
      <h2 class="mb-4 mt-8 text-xl font-semibold leading-none text-gray-900 dark:text-white">Professional Information</h2>
      <div class="grid gap-4 mb-4 md:gap-6 md:grid-cols-2 sm:mb-8">
        <div>
          <%= form.text_field :current_title, "Current Job Title", required: true, placeholder: "Senior Software Engineer" %>
        </div>
        <div>
          <%= form.text_field :current_company, "Current Employer", required: true, placeholder: "Current Company Name" %>
        </div>
        <div>
          <%= form.text_field :current_ctc, "Current CTC in LPA", required: true, placeholder: "12" %>
        </div>
        <div>
          <%= form.text_field :expected_ctc, "Expected CTC in LPA", required: true, placeholder: "14" %>
        </div>
        <div>
          <%= form.text_field :experience, "Experience in Years", required: true, placeholder: "5" %>
        </div>
        <div>
          <%= form.text_field :notice_period, "Notice Period in Days", required: true, placeholder: "30", minlength: 2, maxlength: 2, pattern: "[0-9]{2}"%>
        </div>
        <div>
          <%= form.text_field :highest_qualification, "Highest Education Qualification", required: true, placeholder: "B.Tech" %>
        </div>
      </div>
      <%= form.submit 'Submit Application', class: "btn-primary", data: {disable_with: "Please wait..."} %>
      <%= link_to "Cancel", public_openings_path, class: "btn-secondary" %>
    <% end %>
  </div>
