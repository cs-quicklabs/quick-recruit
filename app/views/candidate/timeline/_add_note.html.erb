<li class="mb-4 ms-6">
  <span class="absolute flex items-center justify-center w-7 h-7 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900">
    <%= display_xsmall_avatar(event.user) %>
  </span>
  <div class="items-center justify-between p-1  sm:flex dark:bg-gray-700 dark:border-gray-600">
    <time class="mb-1 text-xs font-normal text-gray-400 sm:order-last sm:mb-0"><%= display_created_at_with_time(event) %></time>
    <div class="text-sm font-normal text-gray-500 dark:text-gray-300"><a href="<%= member_timeline_path(event.user) %>" class="font-medium text-gray-900 hover:underline"><%= event.user.name %></a> added a new note for <a href="<%= candidate_notes_path(event.eventable) %>" class="font-medium text-gray-900 hover:underline"><%= event.eventable.name %></a>
      <% if event.trackable.nil? %>
        which does not exist anymore.
      <% end %>
    </div>
  </div>
  <% unless event.trackable.nil? %>
    <div class="p-2 text-xs italic font-normal text-gray-500 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-600 dark:border-gray-500 dark:text-gray-300">
      <p class="whitespace-pre-wrap"><%= auto_link_urls_in_text(event.trackable.body) %></p>
    <% end %>
  </li>
