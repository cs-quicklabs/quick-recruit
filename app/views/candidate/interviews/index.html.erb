<!--
  This example requires updating your template:

  ```
  <html class="h-full bg-white">
  <body class="h-full">
  ```
-->

<div class="flex min-h-full flex-col">
  <!-- 3 column wrapper -->
  <div class="mx-auto w-full grow lg:flex xl:px-2 -ml-4">
    <!-- Left sidebar & main wrapper -->
    <div class="w-80 xl:flex h-screen"><%= render partial: "candidate/profile", locals: { candidate: @candidate } %></div>

    <div class="flex-1">
      <!-- Main area -->
      <%= render partial: "candidate/nav", locals: { candidate: @candidate } %>
      <div class="relative overflow-x-auto">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th scope="col" class="px-4 py-2">
                Interview
              </th>
              <th scope="col" class="px-4 py-2">
                Interviewer
              </th>
              <th scope="col" class="px-4 py-2">
                Date
              </th>
              <th scope="col" class="px-4 py-2">
                Status
              </th>
              <th scope="col" class="px-4 py-2">
                Action
              </th>
            </tr>
          </thead>
          <tbody>
            <tr class="bg-white border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
              <th scope="row" class="flex items-center px-4 py-2 text-gray-900 whitespace-nowrap dark:text-white">
                <div>
                  <div class="text-sm font-semibold">Online Interview</div>
                </div>
              </th>
              <td class="px-4 py-2">
                Aashish Dhawan
              </td>
              <td class="px-4 py-2">
                Jun 22, 2024 10:00 AM
              </td>
              <td class="px-4 py-2">
                <div class="flex items-center">
                  <div class="h-2.5 w-2.5 rounded-full bg-green-500 me-2"></div>
                  Online
                </div>
              </td>
              <td class="px-4 py-2">
                <!-- Modal toggle -->
                <a href="#" type="button" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="shrink-0 border-t border-gray-200 px-4 py-6 sm:px-6 lg:w-80 lg:border-l lg:border-t-0 lg:pr-8 xl:pr-6">
      <!-- Right column area -->
       <div>
        <h5 class="mr-3 font-semibold dark:text-white">Select Interviewers</h5>
        <p class="text-gray-500 dark:text-gray-400 text-sm mb-4">Click on interviewer to open their calendar to schedule an interview.</p>
        <% @interviewers.each do |interviewer| %>
          <div class="flex space-y-2">
            <% if interviewer.booking_url.present? %>
            <a class ="link" href="<%= interviewer.booking_url %>" target="_blank"><%= interviewer.name %></a>
            <% else %>
            <span class="text-gray-500 font-medium text-sm dark:text-gray-200"><%= interviewer.name %> </span>
            <% end %>
          </div>
        <% end %> 
        <% if @interviewers.empty? %>
          <p class="text-gray-500 dark:text-gray-400 text-xs mb-4">No interviewers have been assigned for this opening yet.</p>
        <% else %>
        <p class="text-gray-500 dark:text-gray-400 text-xs mb-4 mt-2">If an interviewer does not have a calendar link, the interviewer name will appear as disabled.</p>
        <% end %>
        
    </div>
  </div>
</div>
